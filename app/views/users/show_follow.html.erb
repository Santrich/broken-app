<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Posts:</b> <%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= @user.name %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <table class="table table-striped">
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.avatar, width: 50, height: 50 %> &nbsp;
                <strong><%= link_to user.name, user %></strong>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </ul>
    <% end %>
  </div>
</div>